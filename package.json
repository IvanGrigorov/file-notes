{
  "name": "notes-per-file",
  "displayName": "Notes per file",
  "description": "Store notes per file",
  "publisher": "IvanGrigorov",
  "icon": "assets/file-notes.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "File",
    "Notes"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:notes-per-file.openNotes",
    "onCommand:notes-per-file.saveNotes"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notes-per-file.openNotes",
        "title": "Open notes for file"
      },
      {
        "command": "notes-per-file.saveNotes",
        "title": "Save notes for file"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IvanGrigorov/file-notes.git"
  }
}
